#!/usr/bin/env bash

# This script manages the manage_my_process script

case "$1" in
    start)
        if [ -f /var/run/my_process.pid ]; then
            echo "Process is already running (PID: $(cat /var/run/my_process.pid))."
            exit 1
        fi

        # Start the manage_my_process script in the background
        ./manage_my_process & # Adjust the path accordingly
        echo $! > /var/run/my_process.pid
        echo "manage_my_process started with PID: $!"
        ;;

    stop)
        if [ -f /var/run/my_process.pid ]; then
            kill $(cat /var/run/my_process.pid)
            rm /var/run/my_process.pid
            echo "manage_my_process stopped"
        else
            echo "Process not found. Removing stale PID file."
            rm -f /var/run/my_process.pid
        fi
        ;;

    restart)
        if [ -f /var/run/my_process.pid ]; then
            kill $(cat /var/run/my_process.pid)
            rm /var/run/my_process.pid
            echo "manage_my_process stopped"
        fi

        ./manage_my_process & # Adjust the path accordingly
        echo $! > /var/run/my_process.pid
        echo "manage_my_process restarted"
        ;;

    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

